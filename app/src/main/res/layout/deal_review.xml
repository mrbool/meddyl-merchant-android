<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/relativeLayout1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imvDealImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:width="50dp"
                    android:height="50dp"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rloCompanyInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <com.gtsoft.meddyl.merchant.system.gtsoft.GTTextView
                            android:id="@+id/txvCompanyName"
                            android:layout_marginTop="@dimen/small_space"
                            android:layout_width="match_parent"
                            style="@style/text_view_dark_gray_26" />

                    <ImageView
                        android:id="@+id/imvLogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:width="50dp"
                        android:height="50dp"
                        android:scaleType="fitXY"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/small_space"
                        android:background="#000000"
                        android:padding="1dp"
                        android:visibility="invisible"/>

                    <com.gtsoft.meddyl.merchant.system.gtsoft.GTTextView
                        android:id="@+id/txvNeighborhood"
                        android:layout_marginTop="10dp"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/txvCompanyName"
                        style="@style/text_view_dark_gray_19"/>

                    <ImageView
                        android:id="@+id/imvStars"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:width="50dp"
                        android:height="50dp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/txvNeighborhood"
                        android:visibility="invisible"/>

                </RelativeLayout>

                    <View
                        android:id="@+id/vw1"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="@dimen/small_space"
                        android:layout_height="1dip"
                        android:background="#BEBEBE"
                        android:layout_below="@+id/rloCompanyInfo"
                        android:visibility="invisible" />

                    <com.gtsoft.meddyl.merchant.system.gtsoft.GTTextView
                        android:id="@+id/txvDeal"
                        android:layout_marginTop="@dimen/big_space"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/vw1"
                        style="@style/text_view_dark_gray_26" />

                    <com.gtsoft.meddyl.merchant.system.gtsoft.GTTextView
                        android:id="@+id/txvExpirationDate"
                        android:layout_marginTop="@dimen/big_space"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/txvDeal"
                        style="@style/text_view_dark_gray_26" />

                    <View
                        android:id="@+id/vw2"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="@dimen/big_space"
                        android:layout_height="1dip"
                        android:background="#BEBEBE"
                        android:layout_below="@+id/txvExpirationDate"
                        android:visibility="invisible" />

                    <com.gtsoft.meddyl.merchant.system.gtsoft.GTTextView
                        android:id="@+id/txvFinePrintLabel"
                        android:layout_marginTop="@dimen/big_space"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/vw2"
                        style="@style/text_view_dark_gray_22"
                        android:text="FINE PRINT"
                        android:visibility="invisible"/>

                    <com.gtsoft.meddyl.merchant.system.gtsoft.GTTextView
                        android:id="@+id/txvFinePrint"
                        android:layout_marginTop="@dimen/medium_space"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/txvFinePrintLabel"
                        style="@style/text_view_dark_gray_19" />

                    <View
                        android:id="@+id/vw3"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="@dimen/big_space"
                        android:layout_height="1dip"
                        android:background="#BEBEBE"
                        android:layout_below="@+id/txvFinePrint"
                        android:visibility="invisible" />

                    <com.gtsoft.meddyl.merchant.system.gtsoft.GTTextView
                        android:id="@+id/txvCertificatesRemaining"
                        android:layout_marginTop="@dimen/big_space"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/vw3"
                        style="@style/text_view_dark_gray_26" />

                    <View
                        android:id="@+id/vw4"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="@dimen/big_space"
                        android:layout_height="1dip"
                        android:background="#BEBEBE"
                        android:layout_below="@+id/txvCertificatesRemaining"
                        android:visibility="invisible" />

                    <com.gtsoft.meddyl.merchant.system.gtsoft.GTTextView
                        android:id="@+id/txvCompanyInfoLabel"
                        android:layout_marginTop="@dimen/big_space"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/vw4"
                        style="@style/text_view_dark_gray_19"
                        android:text="COMPANY INFORMATION"
                        android:visibility="invisible"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rloMapContainer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible">
                    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                              xmlns:map="http://schemas.android.com/apk/res-auto"
                              xmlns:tools="http://schemas.android.com/tools"
                              android:id="@+id/mpvMap"
                              android:name="com.google.android.gms.maps.SupportMapFragment"
                              android:layout_width="match_parent"
                              android:layout_height="200dp"
                              android:layout_marginTop="@dimen/small_space" />
                    <!--tools:context="com.gtsoft.meddyl.merchant.views.object.MapsActivity"-->
                    <!--"com.google.android.gms.maps.SupportMapFragment"-->
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <com.gtsoft.meddyl.merchant.system.gtsoft.GTTextView
                        android:id="@+id/txvAddress1"
                        android:layout_marginTop="@dimen/small_space"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        style="@style/text_view_dark_gray_19" />

                    <com.gtsoft.meddyl.merchant.system.gtsoft.GTTextView
                        android:id="@+id/txvAddress2"
                        android:layout_marginTop="@dimen/small_space"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/txvAddress1"
                        style="@style/text_view_dark_gray_19" />

                    <com.gtsoft.meddyl.merchant.system.gtsoft.GTTextView
                        android:id="@+id/txvDirections"
                        android:layout_marginTop="@dimen/big_space"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/txvAddress2"
                        android:textColor="@color/blue"
                        style="@style/text_view_dark_gray_19"
                        android:text="@string/merchant_info_text_directions"
                        android:visibility="invisible"/>

                    <com.gtsoft.meddyl.merchant.system.gtsoft.GTTextView
                        android:id="@+id/txvPhone"
                        android:layout_marginTop="@dimen/big_space"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/txvDirections"
                        android:textColor="@color/blue"
                        style="@style/text_view_dark_gray_19" />

                    <com.gtsoft.meddyl.merchant.system.gtsoft.GTTextView
                        android:id="@+id/txvWebSite"
                        android:layout_marginTop="@dimen/big_space"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/txvPhone"
                        android:textColor="@color/blue"
                        style="@style/text_view_dark_gray_19"
                        android:text="@string/merchant_info_text_website"
                        android:visibility="invisible" />

                    <View
                        android:id="@+id/vwBottom"
                        android:layout_width="fill_parent"
                        android:layout_marginBottom="80dp"
                        android:layout_height="1dip"
                        android:layout_below="@+id/txvWebSite" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <com.gtsoft.meddyl.merchant.system.gtsoft.GTButton
            android:id="@+id/btnCreateDeal"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true"
            style="@style/button_blue"
            android:visibility="invisible"/>

    </RelativeLayout>

</LinearLayout>