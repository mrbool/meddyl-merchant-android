<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <org.droidparts.widget.ClearableEditText
        android:id="@+id/edtCompanyName"
        android:hint="Company Name"
        android:textColorHint="@color/light_gray"
        android:layout_marginTop="@dimen/small_space"
        android:layout_below="@+id/txvPhone"
        style="@style/edit_text_name"/>

    <org.droidparts.widget.ClearableEditText
        android:id="@+id/edtCompanyPhone"
        android:hint="Company Phone"
        android:textColorHint="@color/light_gray"
        android:layout_marginTop="@dimen/small_space"
        android:layout_below="@+id/edtCompanyName"
        style="@style/edit_text_phone"/>

    <org.droidparts.widget.ClearableEditText
        android:id="@+id/edtWebsite"
        android:hint="Website"
        android:textColorHint="@color/light_gray"
        android:layout_marginTop="@dimen/small_space"
        android:layout_below="@+id/edtCompanyPhone"
        style="@style/edit_text_email"/>

    <Spinner
        android:id="@+id/spnIndustry"
        android:layout_marginTop="@dimen/small_space"
        android:focusable="true"
        android:textSize="40sp"
        android:prompt="@string/spinner"
        android:layout_below="@+id/edtWebsite"
        style="@style/edit_text_name" />

    <org.droidparts.widget.ClearableEditText
        android:id="@+id/edtJobTitle"
        android:hint="Your Title (ie. Owner, Manager, Marketer)"
        android:textColorHint="@color/light_gray"
        android:layout_marginTop="@dimen/small_space"
        android:layout_below="@+id/spnIndustry"
        style="@style/edit_text_name"/>

</android.support.percent.PercentRelativeLayout>
