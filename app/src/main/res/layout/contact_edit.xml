<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/layName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <org.droidparts.widget.ClearableEditText
            android:id="@+id/edtFirstName"
            android:hint="First Name"
            android:layout_marginTop="@dimen/small_space"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            style="@style/edit_text_name"
            android:visibility="invisible"/>

        <org.droidparts.widget.ClearableEditText
            android:id="@+id/edtLastName"
            android:hint="Last Name"
            android:layout_marginTop="@dimen/small_space"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            style="@style/edit_text_name"
            android:visibility="invisible" />

    </LinearLayout>

    <com.gtsoft.meddyl.merchant.system.gtsoft.GTTextView
        android:id="@+id/txvPhone"
        android:layout_marginTop="@dimen/small_space"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@+id/layName"
        style="@style/text_view_dark_gray_19"
        android:visibility="invisible" />

    <org.droidparts.widget.ClearableEditText
        android:id="@+id/edtEmail"
        android:hint="Email"
        android:textColorHint="@color/light_gray"
        android:layout_marginTop="@dimen/big_space"
        android:layout_below="@+id/txvPhone"
        style="@style/edit_text_email"
        android:visibility="invisible"/>

    <org.droidparts.widget.ClearableEditText
        android:id="@+id/edtJobTitle"
        android:hint="Your Title (ie. Owner, Manager, Marketer)"
        android:textColorHint="@color/light_gray"
        android:layout_marginTop="@dimen/small_space"
        android:layout_below="@+id/edtEmail"
        style="@style/edit_text_name"
        android:visibility="invisible"/>

</android.support.percent.PercentRelativeLayout>
